import asyncio
asyncio.set_event_loop_policy(asyncio.WindowsSelectorEventLoopPolicy())

import os, subprocess, sys
import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.preprocessing import LabelEncoder, MinMaxScaler
from sklearn.model_selection import train_test_split
from sklearn.metrics import mean_absolute_error
import tensorflow as tf
from tensorflow import keras
import joblib, json

# ===========================================================
# 1. Ensure Data Availability
# ===========================================================
DATA_PATH = os.path.join('data', 'ipl_data.csv')
print(f"‚úÖ Checking data file: {DATA_PATH} ‚Üí Exists? {os.path.exists(DATA_PATH)}")

if not os.path.exists(DATA_PATH):
    raise FileNotFoundError("‚ùå 'data/ipl_data.csv' not found ‚Äî please add dataset before running.")

# ===========================================================
# 2. Load the Dataset
# ===========================================================
ipl = pd.read_csv(DATA_PATH)
print("‚úÖ Dataset loaded successfully! Rows:", len(ipl))
print(ipl.head())

# ===========================================================
# 3. Preprocessing
# ===========================================================
df = ipl.drop(['date', 'runs', 'wickets', 'overs', 'runs_last_5', 'wickets_last_5', 'mid', 'striker', 'non-striker'], axis=1, errors='ignore')

X = df.drop(['total'], axis=1)
y = df['total']

# Label Encoding
venue_encoder = LabelEncoder()
batting_team_encoder = LabelEncoder()
bowling_team_encoder = LabelEncoder()
striker_encoder = LabelEncoder()
bowler_encoder = LabelEncoder()

for col, enc in zip(['venue', 'bat_team', 'bowl_team', 'batsman', 'bowler'],
                    [venue_encoder, batting_team_encoder, bowling_team_encoder, striker_encoder, bowler_encoder]):
    if col in X.columns:
        X[col] = enc.fit_transform(X[col])
print("‚úÖ Categorical encoding complete.")

# ===========================================================
# 4. Split & Scale Data
# ===========================================================
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)
scaler = MinMaxScaler()
X_train_scaled = scaler.fit_transform(X_train)
X_test_scaled = scaler.transform(X_test)
print("‚úÖ Data split & scaled.")

# ===========================================================
# 5. Define & Train Neural Network
# ===========================================================
model = keras.Sequential([
    keras.layers.Input(shape=(X_train_scaled.shape[1],)),
    keras.layers.Dense(512, activation='relu'),
    keras.layers.Dense(216, activation='relu'),
    keras.layers.Dense(1, activation='linear')
])

huber_loss = tf.keras.losses.Huber(delta=1.0)
model.compile(optimizer='adam', loss=huber_loss)

print("üöÄ Training model...")
history = model.fit(X_train_scaled, y_train, epochs=10, batch_size=64, validation_data=(X_test_scaled, y_test), verbose=1)

# ===========================================================
# 6. Evaluate
# ===========================================================
predictions = model.predict(X_test_scaled)
mae = mean_absolute_error(y_test, predictions)
print("‚úÖ Mean Absolute Error (MAE):", mae)

# ===========================================================
# 7. Save Model & Report
# ===========================================================
joblib.dump(model, 'model.pkl')
with open('notebook_prediction.json', 'w') as f:
    json.dump({'mean_absolute_error': float(mae)}, f)

print("‚úÖ Model saved to model.pkl and report written.")
